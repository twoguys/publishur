<li class="group">
	<div class="name">
		<%= link_to(group.name, group) %>
		<%= image_tag("/images/icons/lock.png", :title => "Private group", :class => "ml15") if !group.public? %>
	</div>
	<div class="weak member-count">
		<%= pluralize(group.members.count, "member") %>
	</div>
	<div class="weak message-time">
		<% if group.messages.count > 0 %>
		last message posted <%= time_ago_in_words(group.messages.last.created_at) %> ago
		<% end %>
	</div>
</li>