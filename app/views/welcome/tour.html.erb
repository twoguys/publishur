<div class="centered">
	<div class="lined-bottom pb30 mb20">
		<%= image_tag('/images/tour-top-text.gif') %>
	</div>
	<div class="tour-screenshot lined-bottom pb30 mb30">
		<h2 class="mb30">Search, browse, create, and join groups.</h2>
		<%= image_tag('/images/tour1.gif') %>
		<div id="tour-1-1" class="tour-hint hoverable">
			<%= image_tag('/images/tour-num-1.png') %>
			<div class="hidden">
				Quickly search groups
			</div>
		</div>
		<div id="tour-1-2" class="tour-hint hoverable">
			<%= image_tag('/images/tour-num-2.png') %>
			<div class="hidden">
				Create a group
			</div>
		</div>
		<div id="tour-1-3" class="tour-hint hoverable">
			<%= image_tag('/images/tour-num-3.png') %>
			<div class="hidden">
				Join public groups
			</div>
		</div>
		<div id="tour-1-4" class="tour-hint hoverable">
			<%= image_tag('/images/tour-num-4.png') %>
			<div class="hidden">
				Request to join private groups
			</div>
		</div>
	</div>
	<div class="tour-screenshot lined-bottom pb30 mb40">
		<h2 class="mb30">Send new messages, view past messages, see group members.</h2>
		<%= image_tag('/images/tour2.gif') %>
		<div id="tour-2-1" class="tour-hint hoverable">
			<%= image_tag('/images/tour-num-1.png') %>
			<div class="hidden">
				Post a new message
			</div>
		</div>
		<div id="tour-2-2" class="tour-hint hoverable">
			<%= image_tag('/images/tour-num-2.png') %>
			<div class="hidden">
				Set your forwarding rules
			</div>
		</div>
		<div id="tour-2-3" class="tour-hint hoverable">
			<%= image_tag('/images/tour-num-3.png') %>
			<div class="hidden">
				View past messages
			</div>
		</div>
		<div id="tour-2-4" class="tour-hint hoverable">
			<%= image_tag('/images/tour-num-4.png') %>
			<div class="hidden">
				View group members
			</div>
		</div>
	</div>
	<div class="tour-screenshot lined-bottom pb30 mb30">
		<h2 class="mb30">Tell us how you want your messages forwarded for each group.</h2>
		<%= image_tag('/images/tour3.gif') %>
		<div id="tour-3-1" class="tour-hint hoverable">
			<%= image_tag('/images/tour-num-1.png') %>
			<div class="hidden">
				Manage existing rules
			</div>
		</div>
		<div id="tour-3-2" class="tour-hint hoverable">
			<%= image_tag('/images/tour-num-2.png') %>
			<div class="hidden">
				Create new rules
			</div>
		</div>
		<div id="tour-3-3" class="tour-hint hoverable">
			<%= image_tag('/images/tour-num-3.png') %>
			<div class="hidden">
				View helpful hints
			</div>
		</div>
	</div>
	<div class="mt30 pb30 centered">
		<%= link_to('', signup_path, :id => 'signup-button') %>
	</div>
</div>