<li class="message">
	<span class="message-user">
		<%= link_to(message.user.name, message.user) %>
	</span>
	<span class="body">
		<%= auto_link(h(message.body)) %>
	</span>
	<span class="weak">
		(<%= message_sent_at(message.send_at) %>)
		<%= link_to('delete', [message.group, message], :method => :delete, :confirm => 'Are you sure you want to delete this message?', :class => 'small') if message.mine?(current_user) && message.young? %>
	</span>
</li>